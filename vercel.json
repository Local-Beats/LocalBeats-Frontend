{
  "version": 2,
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/auth/:path*",
      "destination": "https://local-beats-backend.vercel.app/auth/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://local-beats-backend.vercel.app/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}